# -----------------------------------------------------------------------------
# BloomX Environment Variables Template
# Copy this file to .env and fill in the values.
# -----------------------------------------------------------------------------

# Core
# The database connection string (Prisma)
DATABASE_URL="postgresql://user:password@localhost:5432/bloomx"
# The public URL of your application
NEXT_PUBLIC_APP_URL="http://localhost:3000"
# Secret key for registration/invite flows
REGISTRATION_SECRET="choose-a-random-secret"

# Authentication (NextAuth)
# The URL of your application (usually same as NEXT_PUBLIC_APP_URL)
NEXTAUTH_URL="http://localhost:3000"
# Secret used to sign session cookies (at least 32 characters)
NEXTAUTH_SECRET="your-nextauth-secret-choose-something-long"

# Data Encryption
# Key for encrypting sensitive data in the database (at least 32 characters)
# If not provided, NEXTAUTH_SECRET will be used as a fallback.
DATA_ENCRYPTION_KEY="your-encryption-key-32-chars-long"

# Auth Providers (Optional)
# Required if you want to enable Google Sign-In / Google Drive Integration
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Email Service (Resend)
# Required for sending outgoing emails
RESEND_API_KEY="re_..."

# AI Configuration
# Supported providers: openai, gemini, anthropic, cohere, grok
AI_PROVIDER="openai"
# API Key for the selected provider
AI_KEY="your-ai-api-key"
# Model ID (e.g., gpt-4, claude-3-opus, gemini-1.5-pro)
AI_MODEL="gpt-3.5-turbo"

# Storage (Generic S3 Compatible)
# Used for file attachments and assets
S3_ENDPOINT="https://..."
S3_REGION="us-east-1"
S3_ACCESS_KEY="your-access-key"
S3_SECRET_KEY="your-secret-key"
S3_BUCKET="your-bucket-name"

# Brand Customization
BRAND_NAME="Bloom"
BRAND_COLOR="#2563EB"
BRAND_LOGO="" # URL to your logo image

# Expansion Specific
# Giphy expansion API Key (optional, a demo key is used if omitted)
NEXT_PUBLIC_GIPHY_API_KEY="your-giphy-public-key"

# DLP Expansion Keywords (Comma-separated)
# EXPANSION_DLP_KEYWORDS="password,secret,credit card"
